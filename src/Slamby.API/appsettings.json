{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "SlambyApi": {
    "BaseUrlPrefix": "",
    "Parallel": {
      "ConcurrentTasksLimit": "0"
    },
    "Directory": {
      "Classifier": "/Slamby/Dictionaries/Classifier",
      "Prc": "/Slamby/Dictionaries/Prc",
      "User": "/Slamby/User",
      "Temp": "/Slamby/Temp",
      "Sys": "/Slamby/Sys"
    },
    "ElasticSearch": {
      "Uris": [
        "http://localhost:9200/"
      ]
    },
    "Serilog": {
      "Output": "",
      "RetainedFileCountLimit": 14,
      "MinimumLevel": "Debug"
    },
    "Elm": {
      "Key": ""
    },
    "Redis": {
      "Enabled": false,
      "Configuration": "localhost,abortConnect=false,ssl=false,syncTimeout=30000"
    },
    "Stats": {
      "Enabled": true,
      "Redis": {
        "Configuration": "stats.slamby.com,abortConnect=false,ssl=true,sslHost=stats.slamby.com,syncTimeout=30000",
        "CommandMap": {
          "zincrby": "D477AD8B-1DDD-3C18-8120-1515534732D5"
        }
      }
    },
    "Resources": {
      "LogPath": "./wwwroot/",
      "RefreshInterval": 5000,
      "MaxRequestSizeMemoryPercentage": 30,
      "MaxRequestSize": 200
    },
    "RequestLogger": {
      "IgnoreContent": [
        "/files",
        "/api/helper/fileparser",
        "/api/documents/bulk",
        "/api/tags/bulk"
      ]
    },
    "DiskSpaceLimit": {
      "MinimumMb": "1000"
    }
  }
}
